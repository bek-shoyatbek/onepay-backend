generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Restaurants {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  image            String
  adminTelegramIds String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transactions {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  transId     String?
  prepareId   Int?
  orderId     String?
  userId      String?
  performTime DateTime?
  cancelTime  DateTime?
  state       Int?
  reason      Int?
  status      TransactionStatus @default(INIT)
  provider    Provider
  terminal    Terminal
  amount      Float
  tip         Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Waiters {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  restaurantId String
  waiterId     String
  phone        String?
  telegramId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admins {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  restaurantId String
  adminId      String
  phone        String?
  telegramId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TipTransactions {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  amount       Float
  restaurantId String
  waiterId     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TransactionStatus {
  INIT
  PENDING
  PAID
  CANCELED
}

enum Provider {
  uzum
  click
  payme
}

enum Terminal {
  poster
  rkeeper
  iiko
}
